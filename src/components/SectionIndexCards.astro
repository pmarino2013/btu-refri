---
import { servicios } from "../data/datos";
---

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 mb-5 g-4">
  {
    servicios.map((item) => (
      <div class="col d-flex justify-content-center ">
        <div class="card text-center fade-in">
          <div class="d-flex justify-content-center mt-3">
            <img src={item.icon} class="card-img-top" alt={item.servicio} />
          </div>
          <div class="card-body">
            <h5 class="card-title">{item.servicio}</h5>
            <p class="card-text">
              Some quick example text to build on the card title and make up the
              bulk of the card’s content.
            </p>
            <a href={item.url} class="btn btn-success">
              Conocer más...
            </a>
          </div>
        </div>
      </div>
    ))
  }
</div>

<style>
  .card img {
    width: 100px;
  }
  .btn-frio {
    background-color: var(--verde-menta);
    border-color: var(--verde-menta);
  }
</style>
