---
const { pathname } = Astro.url;
console.log(pathname);
---

<nav class="navbar navbar-expand-lg bg-nav">
  <div class="container">
    <a class="navbar-brand" href="#"><strong>BTU</strong> Refrigeraci√≥n</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a
            class={pathname === "/" ? "nav-link  active" : "nav-link text-nav"}
            aria-current="page"
            href="/">Inicio</a
          >
        </li>
        <li class="nav-item">
          <a
            class={pathname === "/service"
              ? "nav-link  active"
              : "nav-link text-nav"}
            href="/service">Servicios</a
          >
        </li>
      </ul>
    </div>
  </div>
</nav>

<style>
  .navbar-brand {
    color: var(--gris-acero) !important;
  }
  ul.navbar-nav .nav-link {
    color: var(--gris-acero) !important;
    /* font-weight: bold; */
    &:hover {
      color: var(--azul-frio) !important;
    }
  }
  .bg-nav {
    background-color: var(--verde-menta);
  }
  .nav-link:hover {
    color: var(--azul-frio) !important;
  }
  ul.navbar-nav .nav-link.active {
    color: rgba(0, 140, 255, 0.884) !important;
    /* text-decoration: underline; */
    font-weight: bold;
  }
</style>
