---
const { servicio } = Astro.props;
---

<div class="my-3 fade-in">
  <div
    class="banner-card w-100 d-flex align-items-center justify-content-center"
    style={`background-size: cover; background-position: center;background-image:url(${servicio.imagen})`}
  >
    <div class="container-text">
      <span class="text-white text-center">
        {servicio.servicio}
      </span>
    </div>
    <div class="btn-enlace">
      <a href=""><i class="bi bi-arrow-right-circle-fill"></i></a>
    </div>
  </div>
</div>

<style>
  /* estilo del banner con imagen de fondo pero con gradiente */
  .banner-card {
    height: 200px;
    position: relative;
    /* background-image: url("https://res.cloudinary.com/dg3bw86m3/image/upload/v1761225452/BTU/aire_banner_zdf8w8.png"); */
    background-color: var(--azul-frio);
    background-blend-mode: overlay;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 10px;
  }
  .container-text {
    position: absolute;
    inset: 0;
    z-index: 1;
    font-weight: bold;
    /* width: 200px; */
    /* height: 200px; */
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
  }

  .btn-enlace {
    position: absolute;
    bottom: 10px;
    right: 10px;
    font-size: 2rem;
    color: white;
    z-index: 2;
    text-decoration: none;
    & a {
      color: var(--gris-claro);
      text-decoration: none;
      &:hover {
        text-decoration: underline;
      }
    }
  }

  @media (min-width: 1024px) {
    .banner-card {
      height: 250px;
    }
    .container-text {
      font-size: 2rem;
    }
    .btn-enlace {
      font-size: 2.5rem;
    }
  }
</style>
